<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="@color/colorGrisFondo">

    <RelativeLayout
        android:id="@+id/contenedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlanco"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/news_cycle_bold"
            android:text="INICIAR SESION"
            android:textColor="#000"
            android:textSize="25dp" />

    </RelativeLayout>

<!--
    <TextView
        android:id="@+id/twAdvertencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/scada_bold"
        android:text=""
        android:textColor="@color/colorRojo"
        android:textSize="15dp"
        />
-->

    <ImageView
        android:id="@+id/ivImagen"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contenedor"
        android:layout_marginTop="20dp"
        android:src="@drawable/casita2"
        />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ivImagen"
            android:layout_marginTop="25dp"
            android:textColorHint="#000"
            android:textColor="#000"
            android:background="@color/colorGris"
            android:padding="10dp"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/etContrase単a"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Contrase単a"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etNombre"
            android:layout_marginTop="25dp"
            android:textColorHint="#000"
            android:textColor="#000"
            android:inputType="textPassword"
            android:background="@color/colorGris"
            android:padding="10dp"/>

    <ImageButton
        android:id="@+id/btnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etContrase単a"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/btniniciar"
        android:textColor="#000"
        android:text="Ingresar"

        />

    <ImageButton
        android:id="@+id/btnRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIngresar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btncrear"
        android:fontFamily="@font/bubbler_one"
        android:text="多No tienes cuenta? Crea una ahora"
        android:textColor="@color/colorCafe"
        android:textSize="15dp"

        />


</RelativeLayout>